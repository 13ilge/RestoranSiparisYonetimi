<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restoran Yönetimi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .sidebar {
            height: 100vh;
            background-color: #f8f9fa;
            padding: 1rem;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            border-right: 1px solid #ddd;
        }

        .content {
            margin-left: 250px;
            padding: 1rem;
            flex-grow: 1;
        }

        footer {
            margin-left: 250px;
            padding: 1rem;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>Restoran Yönetimi</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Garson" asp-action="Index">Garson</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Kasiyer" asp-action="Index">Kasiyer</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Kategori" asp-action="Index">Kategori</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="MutfakPersoneli" asp-action="Index">Mutfak Personeli</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Masa" asp-action="Index">Masa</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Urunler" asp-action="Index">Ürünler</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Stok" asp-action="Index">Stok</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Siparis" asp-action="Index">Sipariş</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Odeme" asp-action="Index">Ödeme</a>
            </li>
        </ul>
    </div>

    <div class="content">
        <header class="mb-4">
            <nav class="navbar navbar-light bg-light">
                <div class="container-fluid">
                    <span class="navbar-brand">Hoş Geldiniz!</span>
                </div>
            </nav>
        </header>

        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-center">
        <p>&copy; 2024 Restoran Yönetim Sistemi</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
