@model RestoranSiparis.Models.Siparis

<h1>Sipariş Düzenle</h1>

<form method="post">
    <input type="hidden" name="Siparis_ID" value="@Model.Siparis_ID" />
    <div class="form-group">
        <label for="Masa_ID">Masa ID</label>
        <input type="number" class="form-control" id="Masa_ID" name="Masa_ID" value="@Model.Masa_ID" required>
    </div>
    <div class="form-group">
        <label for="Mutfak_ID">Mutfak ID</label>
        <input type="number" class="form-control" id="Mutfak_ID" name="Mutfak_ID" value="@Model.Mutfak_ID" required>
    </div>
    <div class="form-group">
        <label for="Garson_ID">Garson ID</label>
        <input type="number" class="form-control" id="Garson_ID" name="Garson_ID" value="@Model.Garson_ID" required>
    </div>
    <div class="form-group">
        <label for="Durum">Durum</label>
        <input type="text" class="form-control" id="Durum" name="Durum" value="@Model.Durum" required>
    </div>
    <div class="form-group">
        <label for="ToplamFiyat">Toplam Fiyat</label>
        <input type="number" class="form-control" id="ToplamFiyat" name="ToplamFiyat" value="@Model.ToplamFiyat" required>
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
