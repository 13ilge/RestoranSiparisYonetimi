@model RestoranSiparis.Models.Odeme

@{
    ViewData["Title"] = "Yeni Ödeme Ekle";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="Kasiyer_ID">Kasiyer ID</label>
        <input type="number" class="form-control" id="Kasiyer_ID" name="Kasiyer_ID" required />
    </div>

    <div class="form-group">
        <label for="SiparisID">Sipariş ID</label>
        <input type="number" class="form-control" id="SiparisID" name="SiparisID" required />
    </div>

    <div class="form-group">
        <label for="Tarih">Tarih</label>
        <input type="date" class="form-control" id="Tarih" name="Tarih" required />
    </div>

    <div class="form-group">
        <label for="OdemeTuru">Ödeme Türü</label>
        <select class="form-control" id="OdemeTuru" name="OdemeTuru" required>
            <option value="Nakit">Nakit</option>
            <option value="Kredi Kartı">Kredi Kartı</option>
            <option value="Banka Transferi">Banka Transferi</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Tutar">Tutar</label>
        <input type="number" step="0.01" class="form-control" id="Tutar" name="Tutar" required />
    </div>

    <button type="submit" class="btn btn-primary">Ödeme Ekle</button>
</form>
