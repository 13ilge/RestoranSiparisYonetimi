@model IEnumerable<RestoranSiparis.Models.Odeme>

@{
    ViewData["Title"] = "Ödemeler";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Ödeme ID</th>
            <th>Kasiyer ID</th>
            <th>Sipariş ID</th>
            <th>Tarih</th>
            <th>Ödeme Türü</th>
            <th>Tutar</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var odeme in Model)
        {
                <tr>
                    <td>@odeme.Odeme_ID</td>
                    <td>@odeme.Kasiyer_ID</td>
                    <td>@odeme.SiparisID</td>
                    <td>@odeme.Tarih.ToShortDateString()</td>
                    <td>@odeme.OdemeTuru</td>
                    <td>@odeme.Tutar</td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("Edit", "Odeme", new { id = odeme.Odeme_ID })">Düzenle</a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "Odeme", new { id = odeme.Odeme_ID })">Sil</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Odeme")" class="btn btn-success">Yeni Ödeme Ekle</a>
