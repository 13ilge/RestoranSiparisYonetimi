@model RestoranSiparis.Models.Kategori

@{
    ViewData["Title"] = "Kategori Sil";
}

<h2>Kategori Sil</h2>

<p>Bu kategoriyi silmek istediğinizden emin misiniz?</p>

<div>
    <p>Kategori Adı: @Model.KategoriAdi</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Kategori_ID" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Index", "Kategori")" class="btn btn-secondary">İptal</a>
</form>
