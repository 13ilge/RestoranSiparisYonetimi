@model IEnumerable<RestoranSiparis.Models.Stok>

@{
    ViewData["Title"] = "Stok Listesi";
}

<h2>Stok Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Stok Durumu</th>
            <th>Güncelleme Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stok in Model)
        {
            <tr>
                <td>@stok.Urun_ID</td>
                <td>@stok.StokDurum</td>
                <td>@stok.GuncellemeTarih.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a href="@Url.Action("Edit", "Stok", new { id = stok.Stok_ID })" class="btn btn-primary">Düzenle</a>
                    <a href="@Url.Action("Delete", "Stok", new { id = stok.Stok_ID })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Stok")" class="btn btn-success">Yeni Stok Ekle</a>
