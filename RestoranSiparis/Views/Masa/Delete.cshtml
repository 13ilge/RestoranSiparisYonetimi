@model RestoranSiparis.Models.Masa

@{
    ViewData["Title"] = "Masa Sil";
}

<h2>@ViewData["Title"]</h2>

<p>Bu masayı silmek istediğinizden emin misiniz?</p>

<div>
    <p>Masa ID: @Model.Masa_ID</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Masa_ID" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Index", "Masa")" class="btn btn-secondary">İptal</a>
</form>
