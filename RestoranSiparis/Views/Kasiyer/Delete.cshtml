<!-- Views/Kasiyer/Delete.cshtml -->
@model Kasiyer

@{
    ViewData["Title"] = "Kasiyer Sil";
}

<h2>Kasiyer Sil</h2>

<p>Bu kasiyeri silmek istediğinizden emin misiniz?</p>

<div>
    <p>Ad: @Model.Ad</p>
    <p>Soyad: @Model.Soyad</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Kasiyer_ID" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Index", "Kasiyer")" class="btn btn-secondary">İptal</a>
</form>
