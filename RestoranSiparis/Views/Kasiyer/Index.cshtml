<!-- Views/Kasiyer/Index.cshtml -->
@model IEnumerable<Kasiyer>

@{
    ViewData["Title"] = "Kasiyer Listesi";
}

<h2>Kasiyer Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kasiyer in Model)
        {
            <tr>
                <td>@kasiyer.Ad</td>
                <td>@kasiyer.Soyad</td>
                <td>
                    <a href="@Url.Action("Edit", "Kasiyer", new { id = kasiyer.Kasiyer_ID })" class="btn btn-primary">Düzenle</a>
                    <a href="@Url.Action("Delete", "Kasiyer", new { id = kasiyer.Kasiyer_ID })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Kasiyer")" class="btn btn-success">Yeni Kasiyer Ekle</a>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
