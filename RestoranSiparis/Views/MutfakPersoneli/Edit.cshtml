@model RestoranSiparis.Models.MutfakPersoneli

@{
    ViewData["Title"] = "Mutfak Personeli Güncelle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="MutfakP_ID" value="@Model.MutfakP_ID" />
    <div class="form-group">
        <label for="Ad">Ad</label>
        <input type="text" class="form-control" id="Ad" name="Ad" value="@Model.Ad" required />
    </div>
    <div class="form-group">
        <label for="Soyad">Soyad</label>
        <input type="text" class="form-control" id="Soyad" name="Soyad" value="@Model.Soyad" required />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("Index", "MutfakPersoneli")" class="btn btn-secondary">Geri Dön</a>
</form>
