@model IEnumerable<RestoranSiparis.Models.MutfakPersoneli>

@{
    ViewData["Title"] = "Mutfak Personeli Listesi";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
            <tr>
                <td>@personel.Ad</td>
                <td>@personel.Soyad</td>
                <td>
                    <a href="@Url.Action("Edit", "MutfakPersoneli", new { id = personel.MutfakP_ID })" class="btn btn-primary">Düzenle</a>
                    <a href="@Url.Action("Delete", "MutfakPersoneli", new { id = personel.MutfakP_ID })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "MutfakPersoneli")" class="btn btn-success">Yeni Personel Ekle</a>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}